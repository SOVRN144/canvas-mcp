# OpenAI (for image/*)
OPENAI_API_KEY=
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=15000

# Azure Vision Read (for PDFs)
AZURE_VISION_ENDPOINT=
AZURE_VISION_KEY=
AZURE_VISION_API_VERSION=v3.2
AZURE_POST_TIMEOUT_MS=15000
AZURE_POLL_MS=1500
AZURE_POLL_TIMEOUT_MS=30000
AZURE_RETRY_MAX=4
AZURE_RETRY_BASE_MS=400
AZURE_RETRY_JITTER_MS=250

# Optional PDF pre-slicing (trim before Azure to enforce maxPages & cost)
PDF_PRESLICE=0  # set to 1 to enable

# When PDF_PRESLICE=0, reject PDFs whose page count exceeds maxPages/OCR_MAX_PAGES
PDF_SOFT_LIMIT=1

# Optional HMAC for incoming requests (do not share; not logged)
OCR_WEBHOOK_SECRET=

# Tunables
OCR_MAX_BYTES=15000000
OCR_MAX_PAGES=25
PORT=8080
LOG_LEVEL=info
